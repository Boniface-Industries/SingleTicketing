@model SingleTicketing.Data.Role
@Html.Partial("_RoleSidebar.cshtml")
@{
    ViewData["Title"] = "Delete Role";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Role</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this role?</h5>
            <dl class="row">
                <dt class="col-sm-3">Role Name</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
