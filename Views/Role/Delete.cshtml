@model SingleTicketing.Data.Role
@Html.Partial("_RoleSidebar.cshtml")
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<div>
    <h4>Are you sure you want to delete this role?</h4>
    <dl class="row">
        <dt class="col-sm-2">Role Name</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
