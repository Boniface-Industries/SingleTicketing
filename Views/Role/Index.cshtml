@model IEnumerable<SingleTicketing.Data.Role>
@Html.Partial("_RoleSidebar.cshtml")
@{
    ViewData["Title"] = "Roles";
}
@if (TempData["SuccessMessage"] != null)
@if (TempData["SuccessMessage"] != null)
@if (TempData["SuccessMessage"] != null)
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Roles</h4>
        </div>
        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success mb-3">Create New Role</a>
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Role Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.RoleName</td>
                                <td>@role.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
