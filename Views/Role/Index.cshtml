@model IEnumerable<SingleTicketing.Data.Role>
@Html.Partial("_RoleSidebar.cshtml")
@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleName</td>
                <td>@role.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
