@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["SuccessLogout"] != null)
{
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-modal="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-success text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                </div>
                <div class="modal-body">
                    @TempData["SuccessLogout"]
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize the modal via JavaScript
            var successModalElement = document.getElementById('successModal');
            if (successModalElement) {
                var successModal = new bootstrap.Modal(successModalElement);
                successModal.show();

                // Automatically hide the modal after 2 seconds
                setTimeout(function () {
                    successModal.hide();
                }, 3000); // 2 seconds
            } else {
                console.log("Success modal element not found.");
            }
        });
    </script>
}

<div class="container text-center my-5">
    <div class="row justify-content-center">
        <!-- Welcome Section -->
        <div class="col-md-6 mb-4">
            <div class="mb-5">
                <h1 class="display-4 mb-4">Welcome to Single Ticketing System</h1>
                <p class="lead">Your one-stop solution for managing traffic violations and enforcement.</p>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="col-md-6 mb-4">
            <div class="row">
                <!-- Driver Card -->
                <div class="col-12 mb-4">
                    <a href="@Url.Action("Home", "Driver")" class="text-decoration-none">
                        <div class="card bg-dark text-white" style="background-image: url('/images/Driver.jpg'); background-size: cover; background-position: center; height: 300px; border-radius: 15px; border: none;">
                            <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                                <i class="bi bi-person-badge fs-2 mb-3"></i> <!-- Bootstrap Icon for Driver -->
                                <h2 class="card-title mb-4">Driver</h2>
                            </div>
                        </div>
                    </a>
                </div>


                <!-- Enforcer Card -->
                <div class="col-12">
                    <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                    <div class="card bg-dark text-white" style="background-image: url('/images/Enforcer.jpg'); background-size: cover; background-position: center; height: 300px; border-radius: 15px; border: none;">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                            <i class="bi bi-shield-check fs-2 mb-3"></i> <!-- Bootstrap Icon for Enforcer -->
                            <h2 class="card-title mb-4">Enforcer</h2>
                        </div>
                    </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
