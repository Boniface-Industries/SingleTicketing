@model SingleTicketing.Models.CreateUserViewModel
@Html.Partial("_SuperAdminSidebar.cshtml")

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create User</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" id="createUserForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Sts_Id" class="control-label"></label>
                    <input asp-for="Sts_Id" class="form-control" />
                    <span asp-validation-for="Sts_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <!-- Add FirstName, LastName, and MiddleName fields -->
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>

                <!-- Role selection -->
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <select asp-for="RoleName" class="form-control">
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <!-- Status selection -->
                <div class="form-group">
                    <label asp-for="StatusName" class="control-label"></label>
                    <select asp-for="StatusName" class="form-control">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Disabled">Disabled</option>
                        <option value="Suspended">Suspended</option>
                    </select>
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>

                <!-- Add Remarks field -->
                <div class="form-group">
                    <label asp-for="Remarks" class="control-label"></label>
                    <textarea asp-for="Remarks" class="form-control"></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Attachments" class="control-label"></label>
                    <textarea asp-for="Attachments" class="form-control"></textarea>
                    <span asp-validation-for="Attachments" class="text-danger"></span>
                </div>

                <div class="form-group text-end mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-danger text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Error</h5>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Error message will be inserted here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Check if there are validation errors
            var validationErrors = [];
        @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <text>
                        validationErrors = @Html.Raw(Json.Serialize(ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage)));
            </text>
        }

                    if (validationErrors.length > 0) {
                $('#modalBody').text(validationErrors[0]); // Show the first error message
                $('#errorModal').modal('show');
                setTimeout(function () {
                    $('#errorModal').modal('hide');
                }, 3000); // Hide the modal after 3 seconds
            }
        });
    </script>
}
