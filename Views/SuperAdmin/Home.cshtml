@Html.Partial("_SuperAdminSidebar.cshtml")
@if (TempData["SuccessLogin"] != null)
{
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-modal="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-success text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                </div>
                <div class="modal-body">
                    @TempData["SuccessLogin"]
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize the modal via JavaScript
            var successModalElement = document.getElementById('successModal');
            if (successModalElement) {
                var successModal = new bootstrap.Modal(successModalElement);
                successModal.show();

                // Automatically hide the modal after 2 seconds
                setTimeout(function () {
                    successModal.hide();
                }, 3000); // 2 seconds
            } else {
                console.log("Success modal element not found.");
            }
        });
    </script>
}
<!-- Main Content -->
<main class="bg-custom col-md-11 ms-sm-auto col-lg-12    px-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card position-relative">
                <div class=" position-absolute top-0 start-0 w-100 h-100"></div>
                <div class="card-body position-relative z-index-1">
                    <h1 class="card-title">Super Admin Dashboard</h1>
                    <p class="card-text"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activities</h5>
                    <ul class="list-unstyled">
                        <li>User logged in</li>
                        <li>User created a report</li>
                        <li>User updated settings</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Notifications</h5>
                    <p>New user registrations: 5</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">System Health</h5>
                    <p>All systems operational.</p>
                </div>
            </div>
        </div>
    </div>
</main>
