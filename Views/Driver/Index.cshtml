@{
    ViewData["Title"] = "Driver Dashboard";
}

<h2 class="text-center mb-4">Driver Dashboard</h2>

<div class="d-flex flex-column justify-content-center align-items-center min-vh-100">
    <!-- Driver dashboard content -->
    <button onclick="location.href='@Url.Action("Scan", "Driver")'"
            class="btn btn-primary btn-lg mb-3"
            style="max-width: 400px; height: 100px;
                   background-image: url('/images/QRscan.jpg');
                   background-size: cover; background-position: center;
                   color: white; border: none;">
        SCAN QR CODE
    </button>

    @model SingleTicketing.Models.DriverLoginViewModel

    <h2 class="mb-3">Login</h2>

    <form asp-action="Login" method="post" class="w-100" style="max-width: 400px;">
        <div class="form-group">
            <label asp-for="LicenseNumber" class="form-label"></label>
            <input asp-for="LicenseNumber" class="form-control" />
            <span asp-validation-for="LicenseNumber" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
