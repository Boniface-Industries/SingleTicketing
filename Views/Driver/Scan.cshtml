@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .scanner-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        #qr-reader {
            border: 1px solid #ced4da;
            border-radius: 8px;
            background-color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
        }
        .btn-scan {
            margin-top: 20px;
            background-color: #4e73df;
            color: white;
        }
    </style>
}

<div class="scanner-container">
    <div class="text-center">
        <h2 class="mb-4">QR Code Scanner</h2>
        <div id="qr-reader" style="width: 400px;"></div>
        <button id="scanBtn" class="btn btn-scan mt-3">Start Scanning</button>
        <div id="result" class="mt-3">
            <h5>Scanned Result:</h5>
            <p id="scanned-output" class="text-muted"></p>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Load Html5Qrcode library -->
    <script src="https://unpkg.com/html5-qrcode/minified/html5-qrcode.min.js"></script>

    <!-- Your custom script -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const qrCodeScanner = new Html5Qrcode("qr-reader");
            const scanButton = document.getElementById("scanBtn");
            const scannedOutput = document.getElementById("scanned-output");
            let cameraId;

            scanButton.addEventListener('click', function () {
                Html5Qrcode.getCameras().then(cameras => {
                    if (cameras.length > 0) {
                        cameraId = cameras[0].id;
                        qrCodeScanner.start(
                            cameraId,
                            {
                                fps: 10,  // frames per second for scanning
                                qrbox: { width: 250, height: 250 }  // size of scanning box
                            },
                            qrCodeMessage => {
                                scannedOutput.textContent = qrCodeMessage;
                            },
                            errorMessage => {
                                // Handle errors or invalid QR codes
                            }
                        ).catch(err => {
                            console.error(err);
                        });
                    }
                }).catch(err => {
                    console.error('Error fetching camera', err);
                });
            });
        });
    </script>
}


