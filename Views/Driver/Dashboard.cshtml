@Html.Partial("_DriverSidebar.cshtml")
@{
    ViewData["Title"] = "Driver Dashboard";
}
@if (TempData["SuccessDriver"] != null)
{
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-modal="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content bg-success text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                </div>
                <div class="modal-body">
                    @TempData["SuccessDriver"]
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize the modal via JavaScript
            var successModalElement = document.getElementById('successModal');
            if (successModalElement) {
                var successModal = new bootstrap.Modal(successModalElement);
                successModal.show();

                // Automatically hide the modal after 2 seconds
                setTimeout(function () {
                    successModal.hide();
                }, 3000); // 2 seconds
            } else {
                console.log("Success modal element not found.");
            }
        });
    </script>
}
<div class="driver-dashboard-container">
    <div class="row">
       

        <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
            <div class="container mt-4">
                <div class="card shadow-lg">
                    <div class="card-body text-center">
                        <h2 class="card-title text-primary">DRIVER</h2>
                        <p class="card-text">Welcome to the DRIVER Dashboard</p>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Total Tickets</h5>
                            <p class="card-text">Number of tickets issued to you.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Pending Payments</h5>
                            <p class="card-text">Total payments pending for your tickets.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Completed Payments</h5>
                            <p class="card-text">Total payments completed successfully.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>