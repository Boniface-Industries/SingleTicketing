@Html.Partial("_DriverSidebar.cshtml")
@{
    ViewData["Title"] = "Driver Dashboard";
}

<div class="driver-dashboard-container">
    <div class="row">
       

        <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-4">
            <div class="container mt-4">
                <div class="card shadow-lg">
                    <div class="card-body text-center">
                        <h2 class="card-title text-primary">DRIVER</h2>
                        <p class="card-text">Welcome to the DRIVER Dashboard</p>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Total Tickets</h5>
                            <p class="card-text">Number of tickets issued to you.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Pending Payments</h5>
                            <p class="card-text">Total payments pending for your tickets.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card custom-card">
                        <div class="card-body">
                            <h5 class="card-title">Completed Payments</h5>
                            <p class="card-text">Total payments completed successfully.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>