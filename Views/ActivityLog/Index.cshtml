@model IEnumerable<SingleTicketing.Models.ActivityLog>
@Html.Partial("_ActivitySidebar.cshtml")
@{
    ViewData["Title"] = "Activity Log";
}

<h2>Activity Log</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User</th>
            <th>Action</th>
            <th>Username</th>
            <th>Firstname</th>
            <th>Middlename</th>
            <th>Lastname</th>
            <th>Details</th>
            <th>IP Address</th>
            <th>Date & Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.UserId</td>
                <td>@log.Action</td>
                <td>@log.Username</td>
                <td>@log.FirstName</td>
                <td>@log.MiddleName</td>
                <td>@log.LastName</td>
                <td>@log.Details</td>
                <td>@log.IpAddress</td>
                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>
